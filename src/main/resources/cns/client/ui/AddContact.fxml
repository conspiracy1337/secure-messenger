<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="TOP_CENTER" minHeight="450.0" minWidth="500.0" prefHeight="540.0" prefWidth="500.0" spacing="20" styleClass="root" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="cns.client.ui.AddContactController">
    <padding>
        <Insets bottom="30" left="40" right="40" top="30" />
    </padding>

    <!-- Header -->
    <VBox alignment="CENTER" spacing="10">
        <Label styleClass="setup-title" text="Add New Contact">
            <font>
                <Font name="System Bold" size="22.0" />
            </font>
        </Label>
        <Label styleClass="setup-subtitle" text="Enter contact details below">
            <font>
                <Font size="13.0" />
            </font>
        </Label>
    </VBox>

    <!-- Form Container -->
    <VBox spacing="20" styleClass="form-container" VBox.vgrow="ALWAYS">
        <padding>
            <Insets bottom="25" left="30" right="30" top="25" />
        </padding>

        <!-- Contact Name -->
        <VBox spacing="8">
            <Label styleClass="field-label" text="Contact Name">
                <font>
                    <Font name="System Bold" size="13.0" />
                </font>
            </Label>
            <TextField fx:id="contactNameField" promptText="Enter contact name" styleClass="setup-field" />
        </VBox>

        <!-- Public Key Input -->
        <VBox spacing="8" VBox.vgrow="ALWAYS">
            <HBox alignment="CENTER_LEFT" spacing="10">
                <Label styleClass="field-label" text="Public Key">
                    <font>
                        <Font name="System Bold" size="13.0" />
                    </font>
                </Label>
                <Button fx:id="scanQRButton" styleClass="scan-button" text="ðŸ“· Scan QR">
                    <font>
                        <Font size="11.0" />
                    </font>
                </Button>
            </HBox>
            <TextArea fx:id="publicKeyArea" prefRowCount="6" promptText="Paste public key here or scan QR code" styleClass="key-input" wrapText="true" VBox.vgrow="ALWAYS" />
            <Label styleClass="hint-text" text="Paste the full public key provided by your contact" />
        </VBox>

        <!-- Error/Status Label -->
        <Label fx:id="statusLabel" styleClass="error-label" text="" wrapText="true" />
    </VBox>

    <!-- Action Buttons -->
    <HBox alignment="CENTER" spacing="15">
        <Button fx:id="addButton" onAction="#addContact" prefWidth="120.0" styleClass="primary-button" text="Add">
            <font>
                <Font name="System Bold" size="13.0" />
            </font>
        </Button>
        <Button fx:id="cancelButton" onAction="#handleClose" prefWidth="120.0" styleClass="secondary-button" text="Cancel">
            <font>
                <Font size="13.0" />
            </font>
        </Button>
    </HBox>
</VBox>
