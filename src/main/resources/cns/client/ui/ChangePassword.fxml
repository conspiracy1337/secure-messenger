<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" minHeight="500.0" minWidth="499.0" prefHeight="647.0" prefWidth="499.0" spacing="25" styleClass="root" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="cns.client.ui.ChangePasswordController">
    <padding>
        <Insets bottom="30" left="40" right="40" top="30" />
    </padding>

    <!-- Header -->
    <VBox alignment="CENTER" spacing="10">
        <Label styleClass="setup-title" text="Change Master Password">
            <font>
                <Font name="System Bold" size="22.0" />
            </font>
        </Label>
        <Label alignment="CENTER" styleClass="setup-subtitle" text="Update your master password below" textAlignment="CENTER">
            <font>
                <Font size="13.0" />
            </font>
        </Label>
    </VBox>

    <!-- Form Container -->
    <VBox alignment="CENTER" spacing="20" styleClass="form-container" VBox.vgrow="ALWAYS">
        <padding>
            <Insets bottom="30" left="30" right="30" top="30" />
        </padding>

        <!-- Current Password -->
        <VBox spacing="8">
            <Label styleClass="field-label" text="Current Password">
                <font>
                    <Font name="System Bold" size="13.0" />
                </font>
            </Label>
            <PasswordField fx:id="currentPasswordField" promptText="Enter current master password" styleClass="setup-field" />
        </VBox>

        <Separator prefWidth="400.0" />

        <!-- New Password -->
        <VBox spacing="8">
            <Label styleClass="field-label" text="New Password">
                <font>
                    <Font name="System Bold" size="13.0" />
                </font>
            </Label>
            <PasswordField fx:id="newPasswordField" promptText="Enter new master password" styleClass="setup-field" />
        </VBox>

        <!-- Confirm New Password -->
        <VBox spacing="8">
            <Label styleClass="field-label" text="Confirm New Password">
                <font>
                    <Font name="System Bold" size="13.0" />
                </font>
            </Label>
            <PasswordField fx:id="confirmNewPasswordField" promptText="Re-enter new master password" styleClass="setup-field" />
        </VBox>

        <!-- Password Strength Indicator -->
        <HBox alignment="CENTER_LEFT" spacing="10">
            <Label fx:id="strengthLabel" styleClass="strength-label" text="Password strength:" />
            <ProgressBar fx:id="strengthBar" prefWidth="150.0" progress="0.0" styleClass="strength-bar" />
        </HBox>

        <!-- Warning Box -->
        <VBox alignment="CENTER" prefHeight="87.0" prefWidth="476.0" spacing="8" styleClass="info-box">
            <padding>
                <Insets bottom="12" left="15" right="15" top="12" />
            </padding>
            <Label alignment="CENTER" prefHeight="89.0" prefWidth="330.0" styleClass="info-text" text="Do NOT forget your PASSWORD!" textAlignment="CENTER" wrapText="true">
                <font>
                    <Font size="20.0" />
                </font>
            </Label>
         <Label alignment="CENTER" layoutX="25.0" layoutY="22.0" prefHeight="89.0" prefWidth="330.0" styleClass="info-text" text="You can NOT decrypt your data otherwise!" textAlignment="CENTER" wrapText="true">
            <font>
               <Font size="16.0" />
            </font>
         </Label>
        </VBox>

        <!-- Status Label -->
        <Label fx:id="statusLabel" styleClass="error-label" text="" wrapText="true" />
    </VBox>

    <!-- Action Buttons -->
    <HBox alignment="CENTER" spacing="15">
        <Button fx:id="changeButton" prefWidth="130.0" styleClass="primary-button" text="Change">
            <font>
                <Font name="System Bold" size="13.0" />
            </font>
        </Button>
        <Button fx:id="cancelButton" prefWidth="130.0" styleClass="secondary-button" text="Cancel">
            <font>
                <Font size="13.0" />
            </font>
        </Button>
    </HBox>
</VBox>
